int main(){
	state = MENU;
    menu();
    //vong lap vo han
while(1){
	switch (state){
		case MENU : 
		menu();
		break;
		case INGAME :
		        ingame();
		        break;
		case GAMEOVER : 
		        gameover();
		        break;
		case INFORMATION :
			information();
			break;
		case  SETTING:
			setting();
			break;
        }
    }
}
